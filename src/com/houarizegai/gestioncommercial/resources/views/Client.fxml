<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTreeView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="root" prefHeight="670.0" prefWidth="1300.0" stylesheets="@../css/client.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox spacing="20.0">
         <children>
            <Label styleClass="title" text="Gestion Client" />
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <JFXTextField fx:id="fieldSearch" labelFloat="true" promptText="Recherche" styleClass="field" />
                  <JFXComboBox fx:id="comboSearchBy" labelFloat="true" promptText="Recherche Par" styleClass="combo" />
                  <JFXButton buttonType="RAISED" onAction="#onAjouter" styleClass="btn" text="Ajouter" />
               </children>
            </HBox>
            <JFXTreeView fx:id="tableClient" VBox.vgrow="ALWAYS" />
         </children>
         <StackPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </StackPane.margin>
      </VBox>
   </children>
</StackPane>
